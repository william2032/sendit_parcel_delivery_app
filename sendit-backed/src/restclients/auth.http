  "email": "{{testEmail}}",
  "password": "wrongpassword"
}

###
# 10. GET USER PROFILE
GET {{baseUrl}}{{apiPrefix}}/profile
Authorization: Bearer {{token}}

###
# 11. REFRESH TOKEN
POST {{baseUrl}}{{apiPrefix}}/refresh-token
Authorization: Bearer {{token}}

